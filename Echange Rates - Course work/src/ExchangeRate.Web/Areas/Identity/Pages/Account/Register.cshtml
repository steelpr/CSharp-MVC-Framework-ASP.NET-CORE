@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="Имейл..." />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Парола</label>
                <input asp-for="Input.Password" class="form-control" placeholder="Парола..." />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Потвърдете паролата</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Потвърдете паролата..." />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>
                    <a asp-page="./Login">Вход</a>
                </p>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Регистрация</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
